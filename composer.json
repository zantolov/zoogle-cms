{
    "name": "zantolov/zoogle-cms",
    "description": "CMS powered by Google Docs",
    "authors": [
        {
            "name": "Zoran Antolovic",
            "email": "zoran.antolovic.os@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zantolov\\ZoogleCms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Zantolov\\ZoogleCms\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "google/apiclient": "^2.11",
        "symfony/dom-crawler": "^5.2",
        "symfony/css-selector": "^5.2",
        "ext-dom": "*",
        "symfony/config": "^5.2",
        "symfony/dependency-injection": "^5.2",
        "symfony/http-kernel": "^5.2",
        "cocur/chain": "^0.9.0",
        "beberlei/assert": "^3.3",
        "symfony/cache": "^5.3",
        "thecodingmachine/safe": "^1.3",
        "symfony/framework-bundle": "^5.3",
        "twig/twig": "^3.3"
    },
    "scripts": {
        "code-style:fix": [
            "PHP_CS_FIXER_FUTURE_MODE=1 php-cs-fixer fix --config='./tools/php-cs-fixer/.php-cs-fixer.dist.php' --diff --ansi --using-cache=no"
        ],
        "code-style:check": [
            "PHP_CS_FIXER_FUTURE_MODE=1 php-cs-fixer fix --config='./tools/php-cs-fixer/.php-cs-fixer.dist.php' --dry-run --diff --ansi --using-cache=no"
        ],
        "lint:php": [
            "parallel-lint src",
            "parallel-lint tests"
        ],
        "lint": [
            "@lint:php"
        ],
        "rector:check": [
            "rector --config='./tools/rector/config.php' --dry-run --ansi --no-progress-bar"
        ],
        "rector:fix": [
            "rector  --config='./tools/rector/config.php' --ansi --no-progress-bar"
        ],
        "phpstan": [
            "phpstan analyse --configuration='./tools/phpstan/config.neon' --ansi --no-progress --memory-limit=3G"
        ],
        "static-analysis": [
            "@composer validate",
            "@lint",
            "@code-style:check",
            "@phpstan",
            "@rector:check"
        ],
        "phpunit": [
            "phpunit --configuration='./tools/phpunit/config.xml' --colors --do-not-cache-result"
        ],
        "tests": [
            "@phpunit"
        ],
        "qc": [
            "@static-analysis",
            "@tests"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.98",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "phpstan/phpstan-beberlei-assert": "^0.12.6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "rector/rector": "^0.11.53",
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.1"
    }
}
